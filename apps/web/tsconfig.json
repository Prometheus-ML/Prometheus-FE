{
  "extends": "@prometheus-fe/typescript-config/base",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/*": ["src/*"],
      "@prometheus-fe/store": ["../../packages/stores/dist"],
      "@prometheus-fe/api": ["../../packages/api/dist"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app/globals.css",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
