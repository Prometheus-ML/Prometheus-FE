{
  "name": "@prometheus-fe/hooks",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build:js": "tsup src/index.ts --format cjs,esm --tsconfig tsconfig.json",
    "build:dts": "tsc --emitDeclarationOnly --project tsconfig.json",
    "build": "pnpm run build:js && pnpm run build:dts",
    "dev": "tsup src/index.ts --format cjs,esm --watch --tsconfig tsconfig.json",
    "clean": "rm -rf dist .tsbuildinfo"
  },
  "dependencies": {
    "@prometheus-fe/stores": "workspace:*",
    "@prometheus-fe/api": "workspace:*",
    "@prometheus-fe/context": "workspace:*"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@prometheus-fe/types": "workspace:*",
    "@prometheus-fe/eslint-config": "workspace:*",
    "@prometheus-fe/typescript-config": "workspace:*",
    "eslint": "^9",
    "tsup": "^8.0.2",
    "typescript": "^5"
  },
  "exports": {
    ".": "./dist"
  }
}
