{
  "extends": "@prometheus-fe/typescript-config/base",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "paths": {
      "@prometheus-fe/types": ["../types/dist"],
      "@prometheus-fe/api": ["../api/dist"],
      "@prometheus-fe/stores": ["../stores/dist"],
      "@prometheus-fe/context": ["../context/dist"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../types" },
    { "path": "../api" },
    { "path": "../stores" },
    { "path": "../context" }
  ]
}
